# Ocean Sentinel Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
APP_NAME="Ocean Sentinel"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# DATABASE CONFIGURATION (Supabase)
# ===========================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
DATABASE_URL="postgresql://postgres:password@db.your-project.supabase.co:5432/postgres"

# ===========================================
# EXTERNAL API KEYS
# ===========================================

# Weather Data (OpenWeatherMap)
OPENWEATHER_API_KEY="your-openweather-api-key"

# Air Quality Data (OpenAQ)
OPENAQ_API_KEY="your-openaq-api-key"

# Ocean Data (NOAA) - Usually no key required
NOAA_API_KEY=""

# Satellite Data (NASA)
NASA_API_KEY="your-nasa-api-key"

# ===========================================
# AI/ML SERVICES
# ===========================================

# Google AI Studio (Gemini)
GOOGLE_AI_STUDIO_KEY="your-google-ai-key"
GOOGLE_AI_MODEL="gemini-pro"

# TensorFlow.js Model URLs
TFJS_MODEL_BASE_URL="https://your-cdn.com/models"

# ===========================================
# BLOCKCHAIN CONFIGURATION (Starton)
# ===========================================
STARTON_API_KEY="your-starton-api-key"
CONTRACT_ADDRESS="0x742d35Cc6634C0532925a3b8D395DBFAF4fB8fE4"
BLOCKCHAIN_NETWORK="mumbai"
STARTON_BASE_URL="https://api.starton.io/v3"

# ===========================================
# REAL-TIME COMMUNICATION (Pusher)
# ===========================================
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="us2"

# ===========================================
# NOTIFICATION SERVICES
# ===========================================

# SMS (Twilio)
TWILIO_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="alerts@oceansentinel.ai"
FROM_NAME="Ocean Sentinel Alerts"

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Bubble.io Integration
BUBBLE_API_KEY="your-bubble-api-key"
BUBBLE_APP_ID="your-bubble-app-id"
BUBBLE_BASE_URL="https://your-app.bubbleapps.io"

# Frontend URLs
FRONTEND_URL="https://oceansentinel.vercel.app"
API_BASE_URL="https://oceansentinel.vercel.app/api/v1"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"

# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
RATE_LIMIT_PER_MINUTE=60
CORS_ORIGINS="http://localhost:3000,https://oceansentinel.vercel.app,https://your-app.bubbleapps.io"
ALLOWED_HOSTS="localhost,oceansentinel.vercel.app,your-app.bubbleapps.io"

# ===========================================
# CACHE CONFIGURATION
# ===========================================
REDIS_URL="redis://localhost:6379"
CACHE_TTL_SECONDS=3600

# ===========================================
# FILE STORAGE
# ===========================================
STORAGE_PROVIDER="supabase"
SUPABASE_STORAGE_BUCKET="ocean-sentinel-files"
MAX_FILE_SIZE_MB=10

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="INFO"
LOG_FORMAT="structured"

# ===========================================
# BACKUP & RECOVERY
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
MAX_WORKERS=4
WORKER_TIMEOUT_SECONDS=30
MAX_REQUESTS_PER_WORKER=1000

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_DETECTION=true
ENABLE_BLOCKCHAIN_LOGGING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SMS_ALERTS=true
ENABLE_EMAIL_ALERTS=true
ENABLE_PUSH_NOTIFICATIONS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
HOT_RELOAD=true
DEV_API_DELAY_MS=0
MOCK_EXTERNAL_APIS=false
